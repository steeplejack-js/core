{
  "name": "@steeplejack/core",
  "version": "1.0.0",
  "description": "The Steeplejack core objects",
  "main": "index.js",
  "scripts": {
    "clean": "rm -Rf **/*.d.ts **/*.js ./coverage ./tmp",
    "compile": "tsc",
    "compile:all": "tsc --outDir ./tmp",
    "coverage": "cross-env NODE_ENV=test nyc npm run test:unit",
    "test": "npm run test:lint -s && npm run test:unit -s",
    "test:lint": "tslint *.ts **/*.ts --exclude=*.d.ts --exclude=**/*.d.ts",
    "test:unit": "mocha --compilers ts:ts-node/register --throw-deprecation --ui bdd --full-trace --recursive test/unit",
    "watch:coverage": "nodemon --ext js,ts --exec 'npm run coverage -s' --legacy-watch",
    "watch:test": "nodemon --ext js,ts --exec 'npm run test -s' --legacy-watch",
    "watch:test:lint": "nodemon --ext js,ts --exec 'npm run test:lint -s' --legacy-watch",
    "watch:test:unit": "nodemon --ext js,ts --exec 'npm run test:unit -s' --legacy-watch"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "cache": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "*.ts",
      "**/*.ts"
    ],
    "exclude": [
      "interfaces",
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steeplejack-js/core.git"
  },
  "author": "Simon Emms <simon@simonemms.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steeplejack-js/core/issues"
  },
  "homepage": "https://github.com/steeplejack-js/core#readme",
  "dependencies": {
    "datautils": "^3.1.7",
    "lodash": "^4.17.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.36",
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "0.0.29",
    "@types/lodash": "^4.14.43",
    "@types/mocha": "^2.2.33",
    "@types/node": "0.0.2",
    "@types/proxyquire": "^1.3.27",
    "@types/sinon": "^1.16.32",
    "@types/sinon-chai": "^2.7.27",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "cross-env": "^3.1.3",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2",
    "sinon-chai": "^2.8.0",
    "ts-node": "^1.7.2",
    "tslint": "^4.0.2",
    "typescript": "^2.1.4"
  }
}
